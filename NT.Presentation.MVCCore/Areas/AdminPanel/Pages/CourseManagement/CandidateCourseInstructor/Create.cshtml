@model NT.CM.Application.Contracts.ViewModels.CandidateCourseInstructor.CreateEditCandidateCourseInstructorViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ثبت نام</h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Course_InstructorID" class="control-label">دوره</label>
                    <select class="form-control" asp-for="Course_InstructorID"
                            asp-items='new SelectList(Model.CourseInstructorList, "ID", "CourseInfo")'>
                        <option value="Null">انتخاب دوره - استاد</option>
                    </select>
                    <span asp-validation-for="Course_InstructorID" class="error"></span>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="CandidateID" class="control-label">فراگیر</label>
                    <select class="form-control" asp-for="CandidateID"
                            asp-items='new SelectList(Model.CandidateList, "ID", "Fullname")'>
                        <option value="Null">انتخاب فراگیر</option>
                    </select>
                    <span asp-validation-for="CandidateID" class="error"></span>

                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ثبت نام</button>
    </div>
</form>
