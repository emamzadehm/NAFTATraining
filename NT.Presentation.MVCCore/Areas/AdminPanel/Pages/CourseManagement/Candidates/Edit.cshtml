@model NT.CM.Application.Contracts.ViewModels.Candidates.CandidateViewModel
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"> ویرایش فراگیران </h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="ID" value="@Model.ID">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Sex" class="control-label">جنسیت</label>
                    <div class="form-check">
                        <input asp-for="Sex" class="form-check-inline" type="radio" value="true" checked>
                        <label class="form-check-label" asp-for="Sex">
                            آقای
                        </label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Sex" class="form-check-inline" type="radio" value="false">
                        <label class="form-check-label" asp-for="Sex">
                            خانم
                        </label>
                    </div>
                    <span asp-validation-for="Sex" class="error"></span>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="FirstName">
                    <span asp-validation-for="FirstName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="LastName">
                    <span asp-validation-for="LastName" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label">ایمیل(شناسه کاربری)</label>
                    <input type="email" class="form-control" asp-for="Email">
                    <span asp-validation-for="Email" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="control-label">رمز عبور</label>
                    <input type="password" class="form-control" asp-for="Password">
                    <span asp-validation-for="Password" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Tel" class="control-label">موبایل</label>
                    <input type="tel" class="form-control" asp-for="Tel">
                    <span asp-validation-for="Tel" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IMG" class="control-label">تصویر</label>
                    <input type="file" class="form-control" asp-for="IMG">
                    <span asp-validation-for="IMG" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="IDCardIMG" class="control-label">تصویر پاسپورت</label>
                    <input type="file" class="form-control" asp-for="IDCardIMG">
                    <span asp-validation-for="IDCardIMG" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CityOfBirth" class="control-label">شهر محل تولد</label>
                    <input type="text" class="form-control" asp-for="CityOfBirth">
                    <span asp-validation-for="CityOfBirth" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="DOB" class="control-label">تاریخ تولد</label>
                    <input type="text" class="form-control datepicker" asp-for="DOB">
                    <span asp-validation-for="DOB" class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CompanyID" class="control-label">نام شرکت</label>
                    <select class="form-control" asp-for="CompanyID"
                            asp-items='new SelectList(Model.CompanyList, "ID", "CompanyName")'>
                        <option value="Null">نام شرکت</option>
                    </select>
                    <span asp-validation-for="CompanyID" class="error"></span>

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="NationalityID" class="control-label">ملیت</label>
                    <select class="form-control" asp-for="NationalityID"
                            asp-items='new SelectList(Model.Nationality, "ID", "Title")'>
                        <option value="Null">ملیت</option>
                    </select>
                    <span asp-validation-for="CompanyID" class="error"></span>

                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="NID" class="control-label">شماره کارت شناسایی</label>
                    <input type="text" class="form-control" asp-for="NID">
                    <span asp-validation-for="NID" class="error"></span>
                </div>
            </div>
        </div>

    </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
</form>