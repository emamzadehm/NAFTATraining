@model NT.CM.Application.Contracts.ViewModels.CourseInstructor.CourseInstructorViewModel
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش دوره</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <input type="hidden" asp-for="ID" value="@Model.ID">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CourseID" class="control-label">دوره</label>
                    <select class="form-control" asp-for="CourseID"
                            asp-items='new SelectList(Model.CourseList, "ID", "CName")'>
                        <option value="Null">انتخاب دوره</option>
                    </select>
                    <span asp-validation-for="CourseID" class="error"></span>

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="InstructorID" class="control-label">استاد</label>
                    <select class="form-control" asp-for="InstructorID"
                            asp-items='new SelectList(Model.InstructorList, "ID", "Fullname")'>
                        <option value="Null">انتخاب استاد</option>
                    </select>
                    <span asp-validation-for="InstructorID" class="error"></span>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Location" class="control-label">محل برگزاری</label>
                    <select class="form-control" asp-for="Location"
                            asp-items='new SelectList(Model.LocationList, "ID", "Title")'>
                        <option value="Null">انتخاب محل</option>
                    </select>
                    <span asp-validation-for="Location" class="error"></span>

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Venue" class="control-label">محل اجراء</label>
                    <input type="text" class="form-control" asp-for="Venue">
                    <span asp-validation-for="Venue" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="SDate" class="control-label">تاریخ آغاز</label>
                    <input type="text" class="form-control datepicker" asp-for="SDate">
                    <span asp-validation-for="SDate" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="EDate" class="control-label">تاریخ پایان</label>
                    <input type="text" class="form-control datepicker" asp-for="EDate">
                    <span asp-validation-for="EDate" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Capacity" class="control-label">ظرفیت</label>
                    <input type="text" class="form-control" asp-for="Capacity">
                    <span asp-validation-for="Capacity" class="error"></span>
                </div>
            </div>
        </div>


    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>
