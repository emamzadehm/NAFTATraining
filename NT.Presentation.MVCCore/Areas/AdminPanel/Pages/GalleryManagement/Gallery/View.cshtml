@model List<NT.GM.Application.Contracts.ViewModels.Galleries.GalleryViewModel>
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"> مشاهده تصاویر آلبوم </h4>
</div>

<div class="modal-body">
    <table id="datatable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>تصویر</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="~/Uploads/@item.FileAddress" style="width:400px;height:300px" /></td>

                    <td>

                        <a class="btn btn-danger pull-right m-rl-5" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.ID">
                            <i class="fa fa-edit"></i> حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>